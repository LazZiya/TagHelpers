<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <ApplicationIcon>files\icon.ico</ApplicationIcon>
    <Authors>Ziya Mollamahmut</Authors>
    <Company>Ziyad.info</Company>
    <Description>Simple to use fully customizable pagination, select enum TagHelpers for ASP.NET Core 2.1 Razor projects.</Description>
    <Copyright>Ziyad.info</Copyright>
    
    <files>
      <file src="License\license.text" target=""></file>
    </files>
    <PackageProjectUrl>http://www.ziyad.info/en/articles/27-LazZiya_TagHelpers</PackageProjectUrl>
    <PackageLicense>License.txt</PackageLicense>
    <PackageIcon>files\icon.png</PackageIcon>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>asp.net-core, razor, taghelpers, pagination, email, phonenumber</PackageTags>
    <PackageReleaseNotes>1.0.3: 
 - SelectEnumTagHelper to create select list drop down from Enum
-  SelectEnumTagHelper with localization support
1.0.2: pagination settings can be saved in json</PackageReleaseNotes>
    <Version>1.0.3</Version>
    <AssemblyVersion>1.0.3.0</AssemblyVersion>
    <FileVersion>1.0.3.0</FileVersion>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseUrl>License.txt</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="LazZiya.TagHelpers.1.0.3.nupkg" />
    <None Remove="LazZiya.TagHelpers.nuspec" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.TagHelpers" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="files\icon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="files\icon.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="files\license.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
