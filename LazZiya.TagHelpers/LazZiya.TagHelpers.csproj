<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp1.0;netcoreapp1.1;netcoreapp2.0;netcoreapp2.1;netcoreapp2.2</TargetFrameworks>
    <ApplicationIcon>files\icon.ico</ApplicationIcon>
    <Authors>Ziya Mollamahmut</Authors>
    <Company>Ziyad.info</Company>
    <Description>Simple to use fully customizable pagination, select enum TagHelpers for ASP.NET Core 1.x and 2.x Razor projects.</Description>
    <Copyright>Ziyad.info</Copyright>
    
    <files>
      <file src="License\license.text" target=""></file>
    </files>
    <PackageProjectUrl>http://www.ziyad.info/en/articles/27-LazZiya_TagHelpers</PackageProjectUrl>
    <PackageLicense>License.txt</PackageLicense>
    <PackageIcon>files\icon.png</PackageIcon>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>asp.net-core, razor, taghelpers, pagination, email, phonenumber</PackageTags>
    <PackageReleaseNotes>Now supports DotNetCore 1.x and 2.x</PackageReleaseNotes>
    <Version>2.0.5</Version>
    <AssemblyVersion>2.0.0.2</AssemblyVersion>
    <FileVersion>2.0.0.2</FileVersion>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseUrl>License.txt</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="LazZiya.TagHelpers.2.0.0.nupkg" />
    <None Remove="LazZiya.TagHelpers.1.0.3.nupkg" />
    <None Remove="LazZiya.TagHelpers.nuspec" />
    <None Remove="_LazZiya.TagHelpers.nuspec.old" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.TagHelpers" Version="1.0.0" Exclude="Build,Analyzers" />
  </ItemGroup>

